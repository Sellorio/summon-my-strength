<MudGrid Justify="Justify.Center" Style="align-items: center">
    <MudItem xs="5">
        <MudText Typo="Typo.subtitle2">Hands Free Mode?</MudText>
    </MudItem>
    <MudItem>
        <MudSwitch T="bool" Color="Color.Success" Class="mr-0" Value="DataStore.HandsFreeMode" ValueChanged="HandsFreeModeChanged" />
    </MudItem>
</MudGrid>

@code {
    private async Task HandsFreeModeChanged(bool newValue)
    {
        DataStore.HandsFreeMode = newValue;
        await DataStore.SaveAsync();
    }
}