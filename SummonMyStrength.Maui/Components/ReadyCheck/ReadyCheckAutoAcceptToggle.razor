<MudGrid Justify="Justify.Center" Style="align-items: center">
    <MudItem xs="5">
        <MudText Typo="Typo.subtitle2">Accept Ready Checks?</MudText>
    </MudItem>
    <MudItem>
        <MudSwitch T="bool" Color="Color.Success" Class="mr-0" Value="DataStore.AutoAcceptReadyChecks" ValueChanged="CheckedChangedAsync" />
    </MudItem>
</MudGrid>

@code {
private async Task CheckedChangedAsync(bool newValue)
{
    DataStore.AutoAcceptReadyChecks = newValue;
    await DataStore.SaveAsync();
}
}